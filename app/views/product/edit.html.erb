  <h1>編輯產品</h1>

<%= form_for @product, :url => { :controller => 'product', :action => 'update' } do |f| %>
分類: <%= render :partial => 'form', :locals => { :f => f } %>

    <div>
    <%= f.label :name, "名稱" %>
    <%= f.text_field :name %>
    </div>

    <div>
    <%= f.label :price, "價格" %>
    <%= f.text_field :price %>
    </div>

    <div>
    <%= f.label :description, "敘述" %>
    <%= f.text_area :description %>
    </div>

    <div>
    <%= f.label :instock, "目前庫存量" %>
    <%= f.text_area :instock %>
    </div>

    <div>
    <%= f.label :safetystock, "安全庫存量" %>
    <%= f.text_area :safetystock %>
    </div>

 



    <%= f.submit "更新" %>
<% end %>
