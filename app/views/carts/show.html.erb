 <h1>購物車</h1>

  <table>
    <thead>
      <tr>
        <td>商品名稱</td>
        <td>數量</td>
        <td>單價</td>
        <td>小計</td>
      </tr>
    </thead>
    <tbody>
      <% current_cart.items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.product.price %></td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="3">總計</td>
      <td><%= current_cart.total_price %></td>
    </tfoot>
  </table>

  <%= link_to '繼續選購', product_index_path %>
  <%= link_to '結帳', cart_path, method: :delete %>
  <%= link_to '返回首頁', root_path %>